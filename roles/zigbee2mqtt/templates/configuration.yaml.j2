# Home Assistant integration (MQTT discovery)
homeassistant: true

# Enable the frontend, runs on port 8080 by default
frontend:
  # URL to your Zigbee2MQTT frontend.
  url: {{ zigbee2mqtt_role_web_url }}

# MQTT settings
mqtt:
  # MQTT base topic for zigbee2mqtt MQTT messages
  base_topic: {{ zigbee2mqtt_name }}
  # MQTT server URL
  server: 'mqtt://mqtt'
  # Optional, default is 60 seconds
  keepalive: 60
  # Optional authentication. If your MQTT server requires authentication uncomment the user/pass lines and set the correct credentials.
  reject_unauthorized: true
  # Set the protocol version, default is 4 (MQTT 3.1.1). If your server uses MQTT 5.0, set this to 5. The MQTT role can use 5.0.
  version: 5
  # MQTT server authentication, uncomment if required
  # user: my_user
  # password: my_password

# Serial settings
serial:
  # Location of your zigbee adapter. Change as necessary.
  port: /dev/ttyUSB0

# Advanced settings
advanced:
  # Let Zigbee2MQTT generate a network key on first start. On subsequent starts (when using the same data directory) the network key will be kept.
  network_key: GENERATE
  # Let Zigbee2MQTT generate a pan_id on first start (when using the same data directory the pan_id will be kept)
  pan_id: GENERATE
  # Let Zigbee2MQTT generate a ext_pan_id on first start (when using the same data directory the ext_pan_id will be kept)
  ext_pan_id: GENERATE
