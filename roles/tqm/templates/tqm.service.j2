[Unit]
Description=tqm service

[Service]
User={{ user.name }}
Group={{ user.name }}
Type=oneshot
WorkingDirectory={{ lookup('role_var', '_paths_location', role='tqm') }}
ExecStartPre=/bin/sleep 30
ExecStart={{ lookup('role_var', '_paths_location', role='tqm') }}/tqm \
  clean {{ tqm.download_client | default('qbt', true)  }}

[Install]
WantedBy=default.target
