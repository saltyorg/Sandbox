# config.toml
---
server:
  host: 0.0.0.0
  port: 7441
  apiToken: {{ omegabrr_apitoken }}
schedule: "0 */6 * * *" # every 6th hour
clients:
  autobrr:
    host: {{ 'http://' + autobrr_docker_networks_alias + ':' + autobrr_web_port }}
    apikey: API_KEY

  arr:
{%- set br = joiner("\n") %}
{% for instance in radarr_info | d({}) %}{{ br() }}
    - name: {{ radarr_info[instance]['name'] }}
      type: radarr
      host: {{ 'http://' + radarr_info[instance]['name'] + ':' + radarr_web_port }}
      apikey: {{ radarr_info[instance]['api_key'] }}
      filters: []
{%- else +%}
    - name: radarr
      type: radarr
      host: http://radarr:7878
      apikey: API_KEY
      filters: [15]

    - name: radarr4k
      type: radarr
      host: http://radarr4k:7878
      apikey: API_KEY
      filters: [16]
{%- endfor %}
{% for instance in sonarr_info | d({}) %}{{ br() }}
    - name: {{ sonarr_info[instance]['name'] }}
      type: sonarr
      host: {{ 'http://' + sonarr_info[instance]['name'] + ':' + sonarr_web_port }}
      apikey: {{ sonarr_info[instance]['api_key'] }}
      filters: []
{%- else +%}

    - name: sonarr
      type: sonarr
      host: http://sonarr:8989
      apikey: API_KEY
      filters: [14]
{%- endfor %}